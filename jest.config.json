{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "./src",
  "roots": [
    "<rootDir>"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!app.module.ts",
    "!main.ts",
    "!**/repository/*.(t|j)s",
    "!**/constants/*.(t|j)s",
    "!**/model/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}